<project name="EcmaScriptDistribution" default="build">
  <!-- Generated by MPS -->
  <property name="build.dir" location="build" />
  <property name="build.tmp" location="${build.dir}/tmp/EcmaScriptDistribution" />
  <property name="build.layout" location="${build.dir}/artifacts/EcmaScriptDistribution" />
  <property name="mps_home" location="" />
  <property name="version" value="2.5" />
  <property name="artifacts.EcmaScript" location="${build.dir}/artifacts/EcmaScript" />
  <property file="${artifacts.EcmaScript}/build.properties" prefix="import.EcmaScript" />
  <property name="EcmaScript.date" value="${import.EcmaScript.EcmaScript.date}" />
  <property name="EcmaScript.build.number" value="${import.EcmaScript.EcmaScript.build.number}" />
  <property name="buildCore.version" value="${import.EcmaScript.buildCore.version}" />
  
  <target name="assemble" depends="fetchDependencies">
    <mkdir dir="${build.layout}" />
    <mkdir dir="${build.tmp}/default/_dl_{build.number}-linux.tar.gz" />
    <mkdir dir="${build.tmp}/default/_dl_{build.number}-linux.tar.gz/EcmaScript ${version}" />
    <mkdir dir="${build.tmp}/default/_dl_{build.number}-linux.tar.gz/EcmaScript ${version}/bin" />
    <copy todir="${build.tmp}/default/_dl_{build.number}-linux.tar.gz/EcmaScript ${version}/bin">
      <fileset file="${mps_home}/bin/mps.vmoptions" />
      <filterchain>
        <fixcrlf eol="lf" eof="remove" />
      </filterchain>
    </copy>
    <mkdir dir="${build.tmp}/default/_dl_{build.number}-linux.tar.gz_f755" />
    <copy todir="${build.tmp}/default/_dl_{build.number}-linux.tar.gz_f755">
      <fileset file="${mps_home}/mps.sh" />
      <filterchain>
        <fixcrlf eol="lf" eof="remove" />
      </filterchain>
    </copy>
    <tar destfile="${build.layout}/${EcmaScript.build.number}-linux.tar.gz" compression="gzip" longfile="gnu">
      <tarfileset dir="${artifacts.EcmaScript}" prefix="EcmaScript ${version}" />
      <tarfileset dir="${mps_home}/bin/linux" prefix="EcmaScript ${version}/bin">
        <exclude name="**/fsnotifier" />
        <exclude name="**/fsnotifier64" />
      </tarfileset>
      <tarfileset file="${mps_home}/bin/linux/fsnotifier" prefix="EcmaScript ${version}/bin" filemode="755" />
      <tarfileset file="${mps_home}/bin/linux/fsnotifier64" prefix="EcmaScript ${version}/bin" filemode="755" />
      <tarfileset dir="${build.tmp}/default/_dl_{build.number}-linux.tar.gz_f755" filemode="755" prefix="EcmaScript ${version}" />
      <tarfileset dir="${build.tmp}/default/_dl_{build.number}-linux.tar.gz" />
    </tar>
    <zip destfile="${build.layout}/${EcmaScript.build.number}.zip">
      <zipfileset dir="${artifacts.EcmaScript}" prefix="EcmaScript ${version}" />
      <zipfileset file="${mps_home}/bin/mps.vmoptions" prefix="EcmaScript ${version}/bin" />
      <zipfileset file="${mps_home}/bin/mps.exe.vmoptions" prefix="EcmaScript ${version}/bin" />
      <zipfileset dir="${mps_home}/bin/win" prefix="EcmaScript ${version}/bin/win">
        <exclude name="**/*.exe" />
      </zipfileset>
      <zipfileset dir="${mps_home}/bin/win" prefix="EcmaScript ${version}/bin/win" filemode="755">
        <include name="**/*.exe" />
      </zipfileset>
      <zipfileset dir="${mps_home}/bin/linux" prefix="EcmaScript ${version}/bin/linux">
        <exclude name="**/fsnotifier" />
        <exclude name="**/fsnotifier64" />
      </zipfileset>
      <zipfileset file="${mps_home}/bin/linux/fsnotifier" prefix="EcmaScript ${version}/bin/linux" filemode="755" />
      <zipfileset file="${mps_home}/bin/linux/fsnotifier64" prefix="EcmaScript ${version}/bin/linux" filemode="755" />
      <zipfileset dir="${mps_home}/bin/nix" prefix="EcmaScript ${version}/bin/nix" filemode="755" />
      <zipfileset file="${mps_home}/bin/mac/info_plist_parser.scpt" prefix="EcmaScript ${version}/bin/mac" />
      <zipfileset file="${mps_home}/bin/mac/libbreakgen.jnilib" prefix="EcmaScript ${version}/bin/mac" />
      <zipfileset file="${mps_home}/bin/mac/libbreakgen64.jnilib" prefix="EcmaScript ${version}/bin/mac" />
      <zipfileset file="${mps_home}/bin/mac/libquaqua.jnilib" prefix="EcmaScript ${version}/bin/mac" />
      <zipfileset file="${mps_home}/bin/mac/libquaqua64.jnilib" prefix="EcmaScript ${version}/bin/mac" />
      <zipfileset file="${mps_home}/bin/mac/relaunch" prefix="EcmaScript ${version}/bin/mac" filemode="755" />
      <zipfileset file="${mps_home}/bin/mac/fsnotifier" prefix="EcmaScript ${version}/bin/mac" filemode="755" />
      <zipfileset file="${mps_home}/bin/mac/Contents/Info.plist" prefix="EcmaScript ${version}/bin/mac/Contents" />
      <zipfileset file="${mps_home}/bin/mac/Contents/Resources/mps.icns" prefix="EcmaScript ${version}/bin/mac/Contents/Resources" />
      <zipfileset file="${mps_home}/bin/mac/Contents/MacOS/mps" prefix="EcmaScript ${version}/bin/mac/Contents/MacOS" filemode="755" />
      <zipfileset file="${mps_home}/mps.sh" prefix="EcmaScript ${version}" filemode="755" />
      <zipfileset file="${mps_home}/mps.bat" prefix="EcmaScript ${version}" filemode="755" />
    </zip>
    <mkdir dir="${build.tmp}/default/_dl_{build.number}-macos.zip" />
    <mkdir dir="${build.tmp}/default/_dl_{build.number}-macos.zip/EcmaScript ${version}.app" />
    <mkdir dir="${build.tmp}/default/_dl_{build.number}-macos.zip/EcmaScript ${version}.app/bin" />
    <copy todir="${build.tmp}/default/_dl_{build.number}-macos.zip/EcmaScript ${version}.app/bin">
      <fileset file="${mps_home}/bin/mps.vmoptions" />
      <filterchain>
        <fixcrlf eol="lf" eof="remove" />
      </filterchain>
    </copy>
    <mkdir dir="${build.tmp}/default/_dl_{build.number}-macos.zip_f755" />
    <copy todir="${build.tmp}/default/_dl_{build.number}-macos.zip_f755">
      <fileset file="${mps_home}/mps.sh" />
      <filterchain>
        <fixcrlf eol="lf" eof="remove" />
      </filterchain>
    </copy>
    <zip destfile="${build.layout}/${EcmaScript.build.number}-macos.zip">
      <zipfileset dir="${artifacts.EcmaScript}" prefix="EcmaScript ${version}.app" />
      <zipfileset file="${mps_home}/bin/mac/Contents/Info.plist" prefix="EcmaScript ${version}.app/Contents" />
      <zipfileset file="${mps_home}/bin/mac/Contents/Resources/mps.icns" prefix="EcmaScript ${version}.app/Contents/Resources" />
      <zipfileset file="${mps_home}/bin/mac/Contents/MacOS/mps" prefix="EcmaScript ${version}.app/Contents/MacOS" filemode="755" />
      <zipfileset file="${mps_home}/bin/mac/info_plist_parser.scpt" prefix="EcmaScript ${version}.app/bin" />
      <zipfileset file="${mps_home}/bin/mac/libbreakgen.jnilib" prefix="EcmaScript ${version}.app/bin" />
      <zipfileset file="${mps_home}/bin/mac/libbreakgen64.jnilib" prefix="EcmaScript ${version}.app/bin" />
      <zipfileset file="${mps_home}/bin/mac/libquaqua.jnilib" prefix="EcmaScript ${version}.app/bin" />
      <zipfileset file="${mps_home}/bin/mac/libquaqua64.jnilib" prefix="EcmaScript ${version}.app/bin" />
      <zipfileset file="${mps_home}/bin/mac/relaunch" prefix="EcmaScript ${version}.app/bin" filemode="755" />
      <zipfileset file="${mps_home}/bin/mac/fsnotifier" prefix="EcmaScript ${version}.app/bin" filemode="755" />
      <zipfileset dir="${build.tmp}/default/_dl_{build.number}-macos.zip_f755" filemode="755" prefix="EcmaScript ${version}.app" />
      <fileset dir="${build.tmp}/default/_dl_{build.number}-macos.zip" />
    </zip>
    <echo file="${build.layout}/build.properties">EcmaScriptDistribution.version=${version}${line.separator}EcmaScript.date=${EcmaScript.date}${line.separator}EcmaScript.build.number=${EcmaScript.build.number}${line.separator}buildCore.version=${buildCore.version}</echo>
  </target>
  
  <target name="buildDependents">
    <ant antfile="build.xml" inheritAll="false" useNativeBasedir="true" />
  </target>
  
  <target name="fetchDependencies" />
  
  <target name="build" depends="assemble" />
  
  <target name="clean">
    <delete dir="${build.tmp}" />
    <delete dir="${build.layout}" />
  </target>
</project>